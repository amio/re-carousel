{
  "name": "re-carousel",
  "version": "1.2.6",
  "description": "React carousel component, simplified.",
  "main": "carousel.js",
  "scripts": {
    "prebuild": "rm -rf ./dist",
    "build": "babel src -d dist",
    "test": "ava test/**/*.spec.js",
    "preexample": "npm run build && rm -rf ./gh-pages && cp -R dist gh-pages",
    "example": "cp example/*.html gh-pages && babel example -d gh-pages",
    "example:watch": "watch 'npm run example' example src",
    "patch": "npm version patch -m 'v%s'",
    "minor": "npm version minor -m 'v%s'",
    "major": "npm version major -m 'v%s'",
    "preghp": "npm run example",
    "ghp": "gh-pages -d gh-pages -b gh-pages",
    "prepublish": "npm run build && cp dist/* ./",
    "postpublish": "rm ./*.js"
  },
  "author": "Amio <amio.cn@gmail.com>",
  "license": "MIT",
  "peerDependencies": {
    "react": "^0.14.0 || ^15.0",
    "react-dom": "^0.14.0 || ^15.0"
  },
  "devDependencies": {
    "ava": "^0.15.2",
    "babel-cli": "^6.8.0",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-react": "^6.5.0",
    "enzyme": "^2.4.1",
    "eslint": "^3.0.1",
    "eslint-config-standard": "^5.3.0",
    "eslint-config-standard-react": "^2.4.0",
    "eslint-plugin-promise": "^1.1.0",
    "eslint-plugin-react": "^5.2.2",
    "eslint-plugin-standard": "^1.3.2",
    "gh-pages": "^0.11.0",
    "react-addons-test-utils": "^15.2.1",
    "rollup": "^0.34.0",
    "watch": "^0.19.1"
  },
  "ava": {
    "babel": {
      "presets": [
        "es2015",
        "react"
      ]
    }
  },
  "keywords": [
    "react",
    "react-component",
    "carousel",
    "slider"
  ],
  "repository": "amio/re-carousel.git",
  "bugs": "https://github.com/amio/re-carousel/issues",
  "homepage": "https://github.com/amio/re-carousel#readme"
}
